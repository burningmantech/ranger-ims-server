set -e
set -u

wd="$(cd "$(dirname "$0")/.." && pwd)";

. "${wd}/bin/_build.sh";

do_setup="false";
develop > /dev/null;

exec "${python}" \
  -c "\
import sys;\
import os;\
sys.path.insert(0, os.path.abspath(os.getcwd()));\
from twisted.scripts.twistd import run;\
run()\
" \
  "$@";
