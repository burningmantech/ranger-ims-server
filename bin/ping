set -e
set -u

if [ $# != 0 ]; then
    usage "Unrecognized arguments:" "$@";
fi;

if ack="$(curl                    \
    --digest --user test:test     \
    --silent                      \
    --request "GET"               \
    --data ""                     \
    "http://localhost:8080/ping/" \
| python -m json.tool 2>/dev/null)"; then
  if [ "${ack}" = '"ack"' ]; then
    echo "OK";
    exit 0;
  fi;
fi;

echo "FAIL";
exit 1;
