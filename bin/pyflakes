set -e;
set -u;

wd="$(cd "$(dirname "$0")/.." && pwd -L)";

. "${wd}/bin/_build.sh";

do_setup="false";
develop > /dev/null;

if [ $# -eq 0 ]; then
  set - calendarserver contrib twisted twistedcaldav txdav txweb2;
fi;

echo "Checking modules:" "$@";
exec "${python}" -m pyflakes "$@";
