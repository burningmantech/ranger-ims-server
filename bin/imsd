set -e
set -u

#
# Handle args
#

wd="$(cd "$(dirname "$0")/.." && pwd)";

opt_nodaemon="";
     opt_ssl="";
        kill="false";
      logdir="${wd}/log";
     logfile="${logdir}/imsd.log";
     pidfile="${logdir}/imsd.pid";

usage ()
{
    program="$(basename "$0")";

    if [ "${1--}" != "-" ]; then echo "$@"; echo; fi;

    echo "Usage: ${program} [-hkXs]";
    echo "Options:";
    echo "        -h Print this help and exit";
    echo "        -k Kill the server";
    echo "        -X Do not daemonize";
    echo "        -s Use SSL";

    if [ "${1-}" = "-" ]; then return 0; fi;
    exit 64;
}

while getopts 'hXks' option; do
    case "${option}" in
        '?') usage; ;;
        'h') usage -; exit 0; ;;
        'k') kill="true"; ;;
        'X') opt_nodaemon="--nodaemon"; logfile="/dev/stdout"; ;;
        's') opt_ssl="--port=ssl:8443"; ;;
    esac;
done;

shift $((${OPTIND} - 1));

if [ $# != 0 ]; then usage "Unrecognized arguments:" "$@"; fi;

#
# Do The Right Thing
#

if "${kill}"; then
    pid="$(cat "${wd}/log/imsd.pid")";
    if [ -n "${pid}" ]; then
        kill -TERM "${pid}";
    fi;
    exit;
fi;

mkdir -p "${wd}/log";

exec "${wd}/bin/twistd"             \
  --rundir="${wd}"                  \
  --pidfile="${pidfile}"            \
  --logfile="${logfile}"            \
  ${opt_nodaemon} web               \
  --notracebacks                    \
  --logfile="${wd}/log/access.log"  \
  ${opt_ssl}                        \
  --class=ims.server.Resource;
